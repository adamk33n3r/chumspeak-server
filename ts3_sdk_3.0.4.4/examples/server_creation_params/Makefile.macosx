#
# Makefile to build TeamSpeak 3 SDK Server Creation Params Sample on Mac OS X
#

CFLAGS = -Wall -g -O0

all: ts3_server_creation_params_sample

ts3_server_creation_params_sample: id_io.o main.o
	gcc -o ts3_server_creation_params_sample id_io.o main.o -L../../bin/mac -lts3server
	install_name_tool -change /usr/local/lib/libts3server.dylib ../../bin/mac/libts3server.dylib ts3_server_creation_params_sample

main.o: main.c
	gcc -c -I../../include main.c $(CFLAGS)

id_io.o: id_io.c
	gcc -c -I../../include id_io.c $(CFLAGS)

clean:
	rm -rf *.o ts3_server_creation_params_sample
